{
  "name": "frontend-boilerplate",
  "version": "0.0.1",
  "description": "It's boilerplate of React + Redux using Atomic Design.",
  "private": true,
  "author": "tsuyoshiwada",
  "license": "MIT",
  "scripts": {
    "start": "node server",
    "dev": "NODE_ENV=development npm run build",
    "prod": "NODE_ENV=production npm run build",
    "build": "npm run clean && npm run build:js",
    "build:js": "webpack",
    "test": "npm run test:lint && npm run test:typecheck && npm run test:unit",
    "test:lint": "eslint --no-ignore src/**/*.js .eslintrc.js",
    "test:typecheck": "flow; test $? -eq 0 -o $? -eq 2",
    "test:unit": "mocha -r ./test/.setup.js -r ignore-styles -r babel-polyfill --compilers js:babel-register ./src/**/*.spec.js ./test/**/*.spec.js",
    "watch": "npm run watch:test",
    "watch:test": "npm run test:unit -- -w",
    "clean": "rimraf dist",
    "styleguide": "styleguidist server",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "firebase": "^3.7.4",
    "firebase-saga": "^1.1.2",
    "material-ui": "^0.17.1",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.2.3",
    "react-material-layout": "^1.1.2",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "reactfire": "^1.0.0",
    "recompose": "^0.21.2",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.0",
    "redux-saga": "^0.14.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.18.5",
    "chalk": "^1.1.3",
    "cli-clear": "^1.0.4",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-flowtype-errors": "^2.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.8.0",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.37.4",
    "glob": "^7.1.1",
    "iflow-react-router": "^1.2.1",
    "iflow-react-router-redux": "^1.0.15",
    "iflow-redux-logger": "^1.0.15",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.9.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "node-emoji": "^1.4.3",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^5.1.2",
    "power-assert": "^1.4.2",
    "react-addons-test-utils": "^15.4.1",
    "react-hot-loader": "^1.3.1",
    "react-styleguidist": "^4.4.3",
    "redux-logger": "^2.7.4",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.14.0"
  }
}
